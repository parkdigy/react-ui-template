{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "baseUrl": "./",
    "paths": {
      "@sass": ["src/sass"],
      "@types": ["src/@types"],
      "@common": ["src/common"],
      "@comp": ["src/component"],
      "@ccomp": ["src/component/Common"],
      "@const": ["src/constant"],
      "@context": ["src/context"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.tsx"]
}
